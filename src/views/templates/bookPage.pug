head
    meta(http-equiv='Content-Type' content='text/html; charset=UTF-8')
    title #{book_name}
    meta(http-equiv='X-UA-Compatible' content='IE=edge')
    meta(name='viewport' content='width=device-width, initial-scale=1')
    meta(name='description' content='library Sh++')
    link(rel='stylesheet' href='/style/libs.min.css')
    link(rel='stylesheet' href='/style/style.css')
    link(rel="icon" type="image/x-icon" href="/images/favicon.png")
    link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.css' crossorigin='anonymous')
    link(rel='shortcut icon' href='http://localhost:3000/book/favicon.ico')
section#header.header-wrapper
    nav.navbar.navbar-default
        .container
            .col-xs-5.col-sm-2.col-md-2.col-lg-2
                .logo
                    a.navbar-brand(href='http://localhost:3000/')
                        span.sh &SHcy;
                        span.plus ++
            .col-xs-12.col-sm-7.col-md-8.col-lg-8
                .main-menu
                    .col-xs-12.col-sm-12.col-md-12.col-lg-12(style='margin: 20px 0;')
                        form.navbar-form.navbar-right
                            .form-group
                                h3.search_result
                                input#search.form-control(type='text' placeholder='Введите запрос и нажмите ENTER')
            .col-xs-2.col-sm-3.col-md-2.col-lg-2
                .social.oneBookPageContacts
                    a(href='https://www.facebook.com/shpp.kr/' target='_blank')
                        span.fa-stack.fa-sm
                            i.fa.fa-facebook.fa-stack-1x
                    a(href='http://programming.kr.ua/ru/courses#faq' target='_blank')
                        span.fa-stack.fa-sm
                            i.fa.fa-book.fa-stack-1x
                    a(href='http://localhost:3000/admin', target='_blank')
                        span.fa-stack.fa-sm
                            i.fa.fa-user.fa-stack-1x
section#main.main-wrapper
    .container
        #content.book_block.col-xs-12.col-sm-12.col-md-12.col-lg-12
            #id
                #bookImg(class="col-xs-12 col-sm-3 col-md-3 item")
                    img.img-responsive(src=`${imgUrl}` alt=`${book_name}`)
                .col-xs-12.col-sm-9.col-md-9.col-lg-9.info
                    .bookInfo.col-md-12
                        #tittle.titleBook= `${book_name}`
                    .col-xs-12.col-sm-12.col-md-12.col-lg-12
                        .bookLastInfo
                            .bookRow
                                span(class='properties') автор:
                                span(id='author')= `${name}`
                            .bookRow
                                span(class='properties') год:
                                span(id='year')= `${year}`
                            .bookRow
                                span(class='properties') страницы:
                                span(id='pages')= `${pages}`
                    .btnBlock.col-xs-12.col-sm-12.col-md-12
                        button(type='button' class='btnBookID btn-lg btn btn-success')= "Хочу читать!"
section#footer.footer-wrapper
    .navbar-bottom.row-fluid
        .navbar-inner
            .container-fuild
                .content_footer
                    | Made with
                    a.heart(href='http://programming.kr.ua/')
                        i.fa.fa-heart(aria-hidden='true')
                    | by HolaTeam
    script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js")
    script.
        $(document).ready(() => {
            $(".btnBookID").click(() => {
                alert(
                    "Книга свободна и ты можешь прийти за ней." +
                    " Наш адрес: г. Кропивницкий, переулок Васильевский 10, 5 этаж." +
                    " Лучше предварительно прозвонить и предупредить нас, чтоб " +
                    " не попасть в неловкую ситуацию. Тел. 099 196 24 69"
                );
                $.post('http://localhost:3000/book/' + #{id})
            })
            $('#search.form-control').keydown((e) => {
                if (e.keyCode === 13) {
                    const query = encodeURI($('#search.form-control').val())
                    window.location.href = 'http://localhost:3000/?search=' + query
                    e.preventDefault()
                }
            })
        })
